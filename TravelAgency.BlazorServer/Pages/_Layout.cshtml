@using Microsoft.AspNetCore.Components.Web
@namespace TravelAgency.BlazorServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
    ﻿
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />

    <title>Vacationey</title>
    <link rel="shortcut icon" type="image/x-icon" href="images/icons/logo.png">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />

    @{
        // css files
        string[] files = Directory.GetFiles("wwwroot/css/custom");
        foreach (string file in files)
        {
            var path = $"~{file[7..]}";
            <link rel="stylesheet" href=@path asp-append-version="true" />
        }
    }
</head>

<body>
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        // js files
        string[] filesJS = Directory.GetFiles("wwwroot/js");
        foreach (string file in filesJS)
        {
            var path = $"~{file[7..]}";
            <script src=@path asp-append-version="true"></script>
        }
    }

    @await RenderSectionAsync("Scripts", required: false)

